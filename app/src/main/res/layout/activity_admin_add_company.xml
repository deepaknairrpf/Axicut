<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dingu.axicut.Admin.Company.AdminAddCompany">

    <EditText
        android:id="@+id/ComapanyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/CenterRef"
        android:ems="10"
        android:hint="Comapany ID"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/CompanyName"
        android:layout_above="@+id/CenterRef"
        android:hint="Comapany name"
        android:textAlignment="center"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterRef"
        android:layout_centerInParent="true">
    </RelativeLayout>

    <EditText
        android:id="@+id/CompanyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ComapanyId"
        android:ems="10"
        android:hint="Comapany  Description"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />
    <Button
        android:text="Add Company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddCompany"
        android:background="@color/colorPrimary"
        android:textColor="@color/bpWhite"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
