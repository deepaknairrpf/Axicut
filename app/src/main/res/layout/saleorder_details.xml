<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="Sale Order : "
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                android:text="2:00"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintLeft_toRightOf="@+id/textView22"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dateText" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                android:text="Time : "
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                android:text="14/02/17"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintLeft_toRightOf="@+id/textView23"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                android:text="Date : "
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Cust DC:"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/saleOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:padding="5dp"
                android:text="S14"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/textView5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/customerDC"
                android:layout_width="206dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="19dp"
                android:entries="@array/materials"
                app:layout_constraintTop_toBottomOf="@+id/saleOrder"
                app:layout_constraintLeft_toRightOf="@+id/textView18"
                android:layout_marginLeft="8dp" />

            <ImageButton
                android:id="@+id/timeButton"
                android:layout_width="47dp"
                android:layout_height="38dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:background="#61749cca"
                app:layout_constraintLeft_toRightOf="@+id/timeText"
                app:layout_constraintTop_toBottomOf="@+id/dateButton"
                app:srcCompat="@mipmap/ic_alarm_black_24dp" />

            <ImageButton
                android:id="@+id/dateButton"
                android:layout_width="47dp"
                android:layout_height="38dp"
                android:background="#61749cca"
                app:srcCompat="@mipmap/ic_date_range_black_24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/customerDC"
                app:layout_constraintLeft_toRightOf="@+id/dateText"
                android:layout_marginLeft="8dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
