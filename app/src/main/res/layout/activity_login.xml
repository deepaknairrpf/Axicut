<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/steelbg"
    tools:context="com.example.dingu.axicut.LoginActivity">

    <ImageView
        android:id="@+id/AxicutLogo"
        android:src="@mipmap/axicut"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/email"/>
    <RelativeLayout
        android:id="@+id/CenterRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    </RelativeLayout>
    <EditText
        android:layout_above="@+id/CenterRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="@color/loginText"
        android:textColor="@color/loginText"
        android:id="@+id/email"
        android:textSize="27sp"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:includeFontPadding="false"
        android:padding="5dp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Log In"
        android:id="@+id/login"
        android:textColor="@color/loginText"
        android:background="@drawable/button_bg"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_below="@+id/CenterRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="27sp"
        android:id="@+id/password"
        android:hint="Password"
        android:padding="5dp"
        android:textColorHint="@color/loginText"
        android:textColor="@color/loginText"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>
