<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_marginTop="@dimen/card_view_margin"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="@dimen/card_view_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_header"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.15"
                android:text="Work Order :"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/bpWhite"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/workOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="W0"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/bpWhite"
                android:textSize="24sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:divider="?android:dividerVertical"
                android:orientation="horizontal"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Material Type : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />


                    <TextView
                        android:id="@+id/materialText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/materials"
                        android:text="MS" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lot No : "
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lotNoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/materials" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="Sheet Size :"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />


                <TextView
                    android:id="@+id/length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="1" />

                <TextView
                    android:id="@+id/breadth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="1240" />

                <TextView
                    android:id="@+id/thickness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="1250" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Inspection Remark"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/DesignLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="Design Layout"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lastModifiedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Modified "
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:id="@+id/DateModified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=" - "
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/Prod_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Production Date"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>
                <TextView
                    android:id="@+id/prod_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"/>

                <RelativeLayout
                    android:id="@+id/operatorNameDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Prod_date_text">

                    <TextView
                        android:id="@+id/operatorNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Operator Name "
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:id="@+id/operatorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=" - "
                        android:textSize="20sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/operatorNameDisplay">

                    <TextView
                        android:id="@+id/TimeDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recorded Time"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=" - "
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/despatchDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Despatch Date"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"/>
                <TextView
                    android:id="@+id/despatchDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"/>

                <RelativeLayout
                    android:id="@+id/despatchDC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/despatchDateText">

                    <TextView
                        android:id="@+id/despatchDCText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Despatch DC Number"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:id="@+id/DespatchDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=" - "
                        android:textSize="20sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Scrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/despatchDC">

                    <TextView
                        android:id="@+id/ScrapDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scrap Date"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:id="@+id/scrapDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=" - "
                        android:textSize="20sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Scrap">

                    <TextView
                        android:id="@+id/ScarpDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scrap DC Number"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:id="@+id/scrapDCNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=" - "
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
